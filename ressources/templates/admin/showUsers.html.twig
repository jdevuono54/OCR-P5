                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </article>
    </div>

    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable( {
                processing: true,
                serverSide: true,
                ordering: false,
                lengthChange: false,
                ajax: '/admin/users/ajax',
                language: {
                    url: "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                },
                columns: [
                    { data: "username" },
                    { data: "email" },
                    { data: "id_role" }
                ]
            } );
        } );
    </script>
{% endblock %}